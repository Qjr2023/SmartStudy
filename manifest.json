{
    "manifest_version": 3,
    "name": "SmartStudy: Dynamic Learning Assistant",
    "version": "1.0",
    "description": "A Chrome Extension to enhance learning with AI-powered annotation, summarization, and multilingual support.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
  